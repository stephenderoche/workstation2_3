        <GridSplitter  HorizontalAlignment="left" Grid.Column="1" Width="7" Background="LightGray" Opacity="30" Grid.Row="0"
                       x:Name="lblborder3" FontWeight="Bold" VerticalContentAlignment="Stretch" VerticalAlignment="Stretch"  />

