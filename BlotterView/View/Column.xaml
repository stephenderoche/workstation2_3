<Window x:Class="BlotterView.Client.View.Column"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Column" Height="150" Width="300" 
        
        >
    <Grid>
        <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Content="Name" Margin="5,0,0,0"></Label>
            <TextBox Width="200" HorizontalAlignment="Left" Name="txtName" Margin="43,0,0,0"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="0,5">
            <Label Content="Column Type" Margin="5,0,0,0"></Label>
                <ComboBox Name="cmbotype" Margin="5,0,0,0" Width="200">

                <ComboBoxItem Content="numeric"></ComboBoxItem>
                <ComboBoxItem Content="percent"></ComboBoxItem>
                <ComboBoxItem Content="string"></ComboBoxItem>

            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Height="25" Margin="0,5">
            <Button Content="Create Columns" Margin="5,0" Click="Button_Click" ></Button>
            <Button Content="Exit" Margin="5,0" Click="exit_Click" ></Button>
            </StackPanel>

        </StackPanel>


    </Grid>
</Window>
